@model LeaveManagment.Models.LeaveTypeModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LeaveTypeModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">

                <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-edit"></i> Edit </button>

                <a id="BackToList" type="submit" class="btn btn-outline-secondary" asp-controller="LeaveType" asp-action="Index"><i class="fa fa-arrow-circle-left"></i> Back to list</a>
            </div>
        </form>
    </div>
</div>

